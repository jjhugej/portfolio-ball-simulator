
//let ball1 = makeBall(canvas.width,canvas.height, 0, 10, 1, 10, 1,20,10) ;

function drawCircle() {       
		if (ballX + ballSize > canvas.width || ballX - ballSize < 0) {
			ballXVel = -ballXVel
		};
		if (ballY + ballSize > canvas.height || ballY - ballSize < 0) {
			ballYVel = -ballYVel
		};

		ballX += ballXVel
		ballY += ballYVel
		context.beginPath();
		context.fillStyle = 'white';
		context.arc(ballX, ballY, ballSize, 0, 2 * Math.PI)
		context.fill();
	};



  /*function drawBall() {       
